TZ=UTC
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=info
APP_KEY=your-random-32-character-app-key
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=esports_tracker

# Riot API (for reference, used by worker)
RIOT_API_KEY=your-riot-api-key
SESSION_DRIVER=cookie

# CORS (comma-separated list of allowed origins for production)
# REQUIRED IN PRODUCTION: Set this to your frontend domain(s)
# Example: https://esports.example.com,https://www.esports.example.com
# WARNING: If not set in production, all cross-origin requests will be denied
CORS_ALLOWED_ORIGINS=

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3333/api/auth/oauth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3333/api/auth/oauth/github/callback

# OAuth - Discord
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:3333/api/auth/oauth/discord/callback